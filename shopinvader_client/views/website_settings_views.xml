<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.website</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="20"/>
    <field name="inherit_id" ref="website.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <div id="webmaster_settings" position="inside">
      <!-- TODO: add a better prominent standalone section -->
        <div id="shopinvader" class="col-12 col-md-6 o_setting_box">
          <div class="o_setting_right_pane">
            <label for="shopinvader_api_key_id" string="Shopinvader" />
            <div class="text-muted">
              Manage shopinvader settings
            </div>
            <div class="content-group">
                <div class="row mt16">
                  <label class="col-lg-4 o_light_label" for="shopinvader_api_key_id"/>
                  <field name="shopinvader_api_key_id" placeholder="XXXXXXX"/>
                </div>
                <div class="row mt16">
                  <label class="col-lg-4 o_light_label" for="shopinvader_master_api_key"/>
                  <field name="shopinvader_master_api_key" placeholder="XXXXXXX"/>
                </div>
                <div class="row mt16">
                  <label class="col-lg-4 o_light_label" for="shopinvader_master_url"/>
                  <field name="shopinvader_master_url" placeholder="XXXXXXX"/>
                </div>
            </div>
          </div>
        </div>
      </div>
    </field>
  </record>

</odoo>
