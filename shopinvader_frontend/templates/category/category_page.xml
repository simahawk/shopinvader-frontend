  <template id="category_page" name="Category page">

    <t t-call="shopinvader_frontend.default_layout">
      <t t-if="category">
        <div class="row">

          <div class="block  block-product_title col-12 col-sm-6 col-lg-8  pt-4 pb-4">
            <h1 t-esc="category['name']" />
          </div>

          <t t-foreach="products" t-as="product">
            <t t-call="shopinvader_frontend.product_thumbnail" />
          </t>
        </div>
      </t>
      <t t-else="">
        <p>No category defined, means, no category displayed.</p>
      </t>
    </t>

  </template>

