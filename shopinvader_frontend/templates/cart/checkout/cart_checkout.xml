<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="cart_checkout" name="Shopinvader cart checkout step">

    <t t-call="shopinvader_frontend.default_layout">

      <div class="page">
        <header>
          <!-- {% global_section 'header_lite', id:'cart_header',  placement: 'top'%} -->
        </header>
        <main>
          <div class="container-fluid">
            <div class="row">
              <div class="col">
                <h3>Check out</h3>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <h2>Shipping address</h2>
                <t t-call="shopinvader_frontend.block_cart_address_display">
                  <t t-set="address_type" t-value="'shipping'" />
                  <t t-set="address" t-value="cart.get(address_type).get('address')" />
                </t>
                <h2>Invoicing address</h2>
                <t t-call="shopinvader_frontend.block_cart_address_display">
                  <t t-set="address_type" t-value="'invoicing'" />
                  <t t-set="address" t-value="cart.get(address_type).get('address')" />
                </t>
                <t t-call="shopinvader_frontend.cart_payment_bank_transfer"></t>
              </div>
              <div class="col block block_cart_summary">
                <t t-set="checkout_button" t-value="False"/>
                <t t-set="cart" t-value="store['cart']"/>

                <t t-call="shopinvader_frontend.block_cart_summary">
                  <t t-set="display_lines" t-value="True"/>
                  <!-- <t t-set="submit_label" t-value="Continue"/> -->
                  <t t-set="display_submit" t-value="False"/>
                </t>
              </div>
            </div>
          </div>

              <!-- {% global_section 'cart_breadcrumb' %} -->
              <!-- <t t-call="shopinvader_frontend.cart_breadcrumb"></t> -->
              <!-- <div class="pt-4 pb-4"> -->
                <!-- {% section 'cart' %} -->
                <!-- <t t-call="shopinvader_frontend.webshop_cart"></t> -->
                <!-- </div> -->
              <!-- {% sections_dropzone %} -->
              <!-- </div> -->
          <!-- {% endblock %} -->
      </main>
    </div>

  </t>

</template>

</odoo>
