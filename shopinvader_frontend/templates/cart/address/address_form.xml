<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="snippets_address_form" name="Snippet Address Form">

    <!-- Not dealing with those yet -->
    <!-- <t t-set="input_group" t-value=""/> -->
    <t t-set="prefix" value="["/>
    <t t-set="suffix" value="]"/>
    <t t-set="prefix_id" value="_"/>

    <div class="address-form">
      <input t-if="address" type="hidden" id="id" t-att-name="prefix +  'id' + suffix" t-att-value="address['id']"/>
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <label t-att-for="prefix_id + 'name'" class="required">Name</label>
            <input type="text" t-att-name="prefix + 'name' + suffix" class="form-control" t-att-id="prefix_id + 'name'" placeholder="Name" data-required="required" t-att-value="address.get('name', '')" autocomplete="off"/>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <label t-att-for="prefix_id + 'street'" >Address line 1</label>
            <input type="text" t-att-name="prefix + 'street' + suffix" class="form-control" data-toggle="autocomplete" t-att-id="prefix_id + 'street'" placeholder="Address line 1" data-required="required" data-bind="route" autocomplete="off" t-att-value="address.get('street', '')"/>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <label t-att-for="prefix_id + 'street2'">Address line 2</label>
            <input type="text" t-att-name="prefix + 'street2' + suffix" class="form-control" t-att-id="prefix_id + 'street2'" t-att-value="address.get('street2', '')" placeholder="Address line 2" autocomplete="off"/>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-5 col-sm-3">
          <div class="form-group">
            <label t-att-for="prefix_id + 'zip'" class="required">Zip code</label>
            <input type="text" t-att-name="prefix + 'zip' + suffix" class="form-control" t-att-id="prefix_id + 'zip'" t-att-value="address.get('zip', '')" placeholder="Zip code" data-required="required" data-bind="postal_code" autocomplete="off"/>
          </div>
        </div>
        <div class="col-7 col-sm-6">
          <div class="form-group">
            <label t-att-for="prefix_id + 'city'" class="required">City</label>
            <input type="text" t-att-name="prefix + 'city' + suffix" class="form-control" t-att-id="prefix_id + 'city'" t-att-value="address.get('city', '')" placeholder="City" data-required="required" data-bind="locality" autocomplete="off"/>
            </div>
          </div>
          <div class="col-12 col-sm-3">
            <div class="form-group">
              <label t-att-for="prefix_id + 'country_id'" class="required">Country</label>
              <select class="form-control" t-att-id="prefix_id + 'country_id'" t-att-name="prefix + 'country[id]' + suffix">
                <t t-foreach="store_settings.available_countries" t-as="country">
                  <option t-if="country['id'] == address.get('country_id', 0)" t-att-value="country['id']" selected="selected"><t t-esc="country['name']"/></option>
                  <option t-else="" t-att-value="country['id']"><t t-esc="country['name']"/></option>
                </t>
                </select>
            </div>
          </div>
          <div class="col-12 col-sm-6">
            <div class="form-group">
              <label t-att-for="prefix_id + 'phone'" class="required">Phone</label>
              <input type="tel" class="form-control" required="1" t-att-id="prefix_id + 'phone'" t-att-name="prefix + 'phone' + suffix" t-att-placeholder="Phone" t-att-value="address.get('phone', '')" autocomplete="off" data-required="required"/>
            </div>
          </div>

          </div>
      </div>

    </template>

  </odoo>



