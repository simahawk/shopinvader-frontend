<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="cart_payment_bank_transfer" name="Block Cart Payment Bank Transfer">

    <p>Bank transfer</p>
    <div class="">
      <form method="POST" action="/invader/cart/add_payment">
        <input type="hidden" name="invader_success_url" t-att-value="cart_step.next_step.url" />
        <input type="hidden" name="invader_error_url" t-att-value="cart_step.url" />
        <!-- <input type="hidden" name="payment_mode[id]" t-att-value="payment_method.id"/> -->
        <input type="hidden" name="payment_mode[id]" value="1"/>
        <button type="submit" name="button" class="btn btn-dark btn-lg font-weight-bold text-uppercase">
          <!-- {% editable_text form_creditcard_title, label: 'Formulaire paiement - titre', rows: 1 %} -->
          <i class="fas fa-long-arrow-alt-right"></i> Pay by bank transfert
          <!-- {% endeditable_text %} -->
        </button>
      </form>
    </div>

  </template>
</odoo>
