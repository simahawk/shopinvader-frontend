<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="cart_index" name="Shopinvader cart index">
    <t t-call="shopinvader_frontend.default_layout">
      <div class="row">
        <t t-set="has_lines" t-value="'lines' in store['cart'] and store['cart']['lines']['count'] > 0" />
        <t t-if="has_lines">
          <t t-call="shopinvader_frontend.section_cart" />
        </t>
        <t t-else="">
          <div class="container pt-3 pb-5 " id="cart" data-shopinvader-container="">
            <div class="alert alert-primary mb-5 mt-5 lead text-center">
              You have no item in your shopping basket !
            </div>
            <div class="text-center">
              <a class="btn btn-outline-dark  font-weight-bold text-uppercase btn-lg" t-att-href="url_base">
                Continue shopping... <i class="fa fa-chevron-right"></i>
              </a>
            </div>
          </div>
        </t>
      </div>
    </t>
  </template>

</odoo>

